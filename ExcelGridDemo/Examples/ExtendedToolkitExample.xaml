<Window x:Class="ExcelGridDemo.ExtendedToolkitExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="http://schemas.galador.net/xaml/spreadsheet"
        Title="Extended Toolkit controls" Height="450" Width="900">
    <Grid>
        <p:DataGrid ItemsSource="{Binding Items}">            
            <p:DataGrid.ControlFactory>
                <p:DefaultDataGridControlFactory />
            </p:DataGrid.ControlFactory>
        </p:DataGrid>
    </Grid>
</Window>
